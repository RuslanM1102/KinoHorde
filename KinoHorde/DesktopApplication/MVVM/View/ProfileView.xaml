<Page
    x:Class="DesktopApplication.MVVM.View.ProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopApplication.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProfileView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="Goldenrod">
        <TabControl Style="{StaticResource FullTab}">
            <TabItem Header="Авторизация">
                <TabItem.Content>
                    <Grid Background="PaleGreen">
                        <Button
                            Width="100"
                            Height="100"
                            Command="{Binding AuthCommand}" />
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="Регистрация" />
        </TabControl>
    </Grid>
</Page>
